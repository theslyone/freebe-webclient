@using Frapid.Areas
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <link href="/scripts/semantic-ui/semantic.min.css" rel="stylesheet" />
    <link href="/my/template/css/semantic-extended.css" rel="stylesheet" />
    <link href="/my/template/css/site.css" rel="stylesheet">
    
    <script src="/scripts/jquery-2.2.4.min.js"></script>
    <script src="/scripts/semantic-ui/semantic.min.js"></script>
    <script src="/scripts/frapid/core/frapid-ajax.js"></script>
    <script src="/my/template/scripts/frapid.js"></script>
    
    <script src="/my/template/scripts/jquery.scrolly.min.js"></script>
	<script src="/my/template/scripts/jquery.scrollex.min.js"></script>
	<script src="/my/template/scripts/skel.min.js"></script>
	<script src="/my/template/scripts/util.js"></script>
	<script src="/my/template/scripts/site.js"></script>
    <style>
        html, body{
            font-size:16px;
        }
		#header {
			background-color: #000 !important;
			top: 0em !important;
			/*padding: 10px 0px 10px 0px;*/
			height: 3.5em;
		}
		#header .logo {
			padding: 10px;
		}
		section.body {
			margin-top: 45px;
		}
    </style>
</head>
<body id="body">
    @{
        string header = ViewBag.LayoutPath + "Header.cshtml";
        string footer = ViewBag.LayoutPath + "Footer.cshtml";
    }
	
    @Html.Partial(header)

    <section class="body">
        <div class="ui attached padded segment">
            <div class="ui container">
                @RenderBody()
            </div>
        </div>
    </section>
    
    @Html.Partial(footer)
    @Html.GetAntiForgeryToken(this.Request.Url)
</body>
</html>